<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/gradient_purple_green"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/gradientItemImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gradient name"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:id="@+id/gradientItemName"
        app:layout_constraintStart_toEndOf="@id/gradientItemImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gradientItemChildOne"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="3dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="child hex one"
        android:fontFamily="@font/roboto"
        android:id="@+id/gradientItemChildOne"
        android:textColor="@color/Grey"
        app:layout_constraintStart_toEndOf="@id/gradientItemImg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:drawableStartCompat="@drawable/ic_baseline_lens_16"
        android:drawablePadding="5dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="child hex two"
        android:fontFamily="@font/roboto"
        android:id="@+id/gradientItemChildTwo"
        android:textColor="@color/Grey"
        app:layout_constraintStart_toEndOf="@id/gradientItemChildOne"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        app:drawableStartCompat="@drawable/ic_baseline_lens_16"
        android:drawablePadding="5dp"
        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_check_circle_24"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:tint="@color/green4"
        android:id="@+id/gradientItemSelected"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>