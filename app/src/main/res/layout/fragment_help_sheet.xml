<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HelpSheet"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Help"
        android:textColor="@color/Black"
        android:textSize="21sp"
        android:id="@+id/helpSheetHeader"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to create a widget"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rippleblack"
        android:id="@+id/helpCreatingWidgetsText"
        android:fontFamily="@font/roboto_medium"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to place widgets on home screen"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rippleblack"
        android:id="@+id/helpPlacingWidgetsText"
        android:fontFamily="@font/roboto_medium"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to save a widget as file"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rippleblack"
        android:id="@+id/helpSavingWidgetsText"
        android:fontFamily="@font/roboto_medium"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to import a widget"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rippleblack"
        android:id="@+id/helpImportingWidgetsText"
        android:fontFamily="@font/roboto_medium"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Need more help? Email us"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rippleblack"
        android:id="@+id/helpEmailUsText"
        android:fontFamily="@font/roboto_medium"

        />

</LinearLayout>