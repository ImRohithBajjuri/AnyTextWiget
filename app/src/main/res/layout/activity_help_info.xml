                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/Grey"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoImportingWidgetImage3"
                            android:src="@drawable/help_import_image_3"
                            android:adjustViewBounds="true"

                            />
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoImportingWidgetImageCard4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeColor="@color/Grey"
                        app:strokeWidth="0dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoImportingWidgetImage4"
                            android:src="@drawable/help_import_image_4"
                            android:adjustViewBounds="true"
                            />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </ScrollView>

