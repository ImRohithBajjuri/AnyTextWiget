                    android:layout_gravity="center_horizontal"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoPlacingWidgetImageCard2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/Grey"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoPlacingWidgetImage2"
                            android:src="@drawable/help_placing_image_2"
                            android:adjustViewBounds="true"

                            />
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoPlacingWidgetImageCard3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeColor="@color/Grey"
                        app:strokeWidth="0dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoPlacingWidgetImage3"
                            android:src="@drawable/help_placing_image_3"
                            android:adjustViewBounds="true"
                            />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/helpInfoPlacingWidgetText3"
                    android:fontFamily="@font/roboto_medium"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoPlacingWidgetImageCard4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/Grey"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoPlacingWidgetImage4"
                            android:src="@drawable/help_placing_image_4"
                            android:adjustViewBounds="true"

                            />
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoPlacingWidgetImageCard5"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeColor="@color/Grey"
                        app:strokeWidth="0dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoPlacingWidgetImage5"
                            android:src="@drawable/help_placing_image_5"
                            android:adjustViewBounds="true"
                            />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/helpInfoSavingWidgetLayout"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/Grey"
                    android:text="@string/helpSaveText"
                    android:layout_margin="10dp"
                    android:id="@+id/helpInfoSavingWidgetText"
                    android:fontFamily="@font/roboto_medium"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoSavingWidgetImageCard"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/Grey"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoSavingWidgetImage"
                            android:src="@drawable/help_saving_image_1"
                            android:adjustViewBounds="true"

                            />
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoSavingWidgetImageCard2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeColor="@color/Grey"
                        app:strokeWidth="0dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoSavingWidgetImage2"
                            android:src="@drawable/help_saving_image_2"
                            android:adjustViewBounds="true"
                            />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/helpInfoImportingWidgetLayout"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_margin="10dp"
                    android:id="@+id/helpInfoImportingWidgetText"
                    android:fontFamily="@font/roboto_medium"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoImportingWidgetImageCard"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/Grey"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoImportingWidgetImage"
                            android:src="@drawable/help_import_image_1"
                            android:adjustViewBounds="true"

                            />
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoImportingWidgetImageCard2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeColor="@color/Grey"
                        app:strokeWidth="0dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoImportingWidgetImage2"
                            android:src="@drawable/help_import_image_2"
                            android:adjustViewBounds="true"
                            />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_margin="10dp"
                    android:id="@+id/helpInfoImportingWidgetText2"
                    android:fontFamily="@font/roboto_medium"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoImportingWidgetImageCard3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
