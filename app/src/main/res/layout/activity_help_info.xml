<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpInfo"
    android:id="@+id/helpInfoParent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/helpInfoAppBar"
       >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helpInfoToolbar"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/white"
            app:title="Help info"
            app:navigationIcon="@drawable/ic_round_chevron_left_24">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
       >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/helpInfoCreatingWidgetLayout"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_margin="10dp"
                    android:id="@+id/helpInfoCreatingWidgetText"
                    android:fontFamily="@font/roboto_medium"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    android:id="@+id/helpInfoCreatingWidgetImageCard"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:strokeColor="@color/Grey"
                    app:strokeWidth="0dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/helpInfoCreatingWidgetImage"
                        android:src="@drawable/help_create_image_1"
                        android:adjustViewBounds="true"
                        />
                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/helpInfoCreatingWidgetText2"
                    android:fontFamily="@font/roboto_medium"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:fitsSystemWindows="true">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoCreatingWidgetImageCard2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/Grey"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoCreatingWidgetImage2"
                            android:src="@drawable/help_create_image_2"
                            android:adjustViewBounds="true"

                            />
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        android:id="@+id/helpInfoCreatingWidgetImageCard3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:strokeColor="@color/Grey"
                        app:strokeWidth="0dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/helpInfoCreatingWidgetImage3"
                            android:src="@drawable/help_create_image_3"
                            android:adjustViewBounds="true"
                            />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/helpInfoCreatingWidgetText3"
                    android:fontFamily="@font/roboto_medium"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    android:id="@+id/helpInfoCreatingWidgetImageCard4"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:strokeWidth="0dp"
                    app:strokeColor="@color/Grey"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/helpInfoCreatingWidgetImage4"
                        android:src="@drawable/help_create_image_4"
                        android:adjustViewBounds="true"
                        android:maxHeight="300dp"
                        />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/helpInfoPlacingWidgetLayout"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_margin="10dp"
                    android:id="@+id/helpInfoPlacingWidgetText"
                    android:fontFamily="@font/roboto_medium"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    android:id="@+id/helpInfoPlacingWidgetImageCard"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:strokeColor="@color/Grey"
                    app:strokeWidth="0dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/helpInfoPlacingWidgetImage"
                        android:src="@drawable/help_placing_image_1"
                        android:adjustViewBounds="true"
                        />
                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/helpInfoPlacingWidgetText2"
                    android:fontFamily="@font/roboto_medium"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
