<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SupportAppOptionsSheet"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Choose your way of support"
        android:textColor="@color/Black"
        android:textSize="21sp"
        android:id="@+id/supportAppOptionsSheetHeader"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy me a coffee (1$)"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_round_coffee_50"
        android:id="@+id/buyCoffeeText"
        android:drawablePadding="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy me a snack (3$)"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_round_fastfood_50"
        android:id="@+id/buySnackText"
        android:drawablePadding="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy me a drink (5$)"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_round_local_bar_50"
        android:id="@+id/buyDrinkText"
        android:drawablePadding="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Support by watching Ad"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_round_tv_50"
        android:id="@+id/watchAdText"
        android:drawablePadding="15dp"

        />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bannerad4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerAdFourId"
        android:visibility="visible">
    </com.google.android.gms.ads.AdView>

</LinearLayout>